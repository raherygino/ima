<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.gsoft.ima.viewmodel.LoginActivityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_auth_header"
            android:background="?attr/colorPrimary"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="@dimen/width_auth_logo"
                android:layout_height="@dimen/height_auth_logo"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/mt_edit_text"
                android:padding="0dp"
                app:tint="@color/white"
                android:src="@drawable/ic_launcher_ima"
                android:contentDescription="@string/app_name" />

            <com.gsoft.ima.view.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/headline_3"
                android:textColor="@color/white"
                android:text="@string/app_name"
                app:customFont="@string/bold"
                android:layout_marginBottom="@dimen/mt_edit_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:padding="@dimen/pd_10">

            <com.gsoft.ima.view.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/headline_3"
                android:text="@string/login"
                app:customFont="@string/regular"
                android:layout_marginBottom="@dimen/mt_edit_text"/>

            <com.gsoft.ima.view.components.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:hint="@string/phone"
                android:layout_marginTop="@dimen/mt_edit_text"
                android:drawableTint="@color/grey_600"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="@dimen/pd_drawable"
                android:textSize="@dimen/text_size_edit_text"
                android:text="@={ viewModel.phone }"
                android:inputType="number"
                android:singleLine="true"
                app:customFont="@string/light"/>

            <com.gsoft.ima.view.components.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mt_edit_text"
                android:hint="@string/password"
                android:drawableTint="@color/grey_600"
                android:drawableStart="@drawable/ic_orbit_lock"
                android:drawablePadding="@dimen/pd_drawable"
                android:textSize="@dimen/text_size_edit_text"
                android:text="@={ viewModel.password }"
                android:singleLine="true"
                android:inputType="textPassword"
                app:customFont="@string/light"/>

            <com.gsoft.ima.view.components.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/headline_5"
                android:text="@string/forgot"
                app:customFont="@string/light"
                android:layout_marginBottom="@dimen/mt_edit_text"/>

            <com.gsoft.ima.view.components.Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginTop="@dimen/mt_edit_text"
                android:onClick="@{ (view) -> viewModel.loginListener() }"
                app:customFont="@string/regular"
                android:text="@string/login"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="23dp"
                android:background="@color/grey_400" />

            <com.gsoft.ima.view.components.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-11dp"
                android:background="@color/grey_100"
                android:paddingStart="@dimen/mx_8"
                android:paddingEnd="@dimen/mx_8"
                android:textSize="@dimen/headline_5"
                app:customFont="@string/light"
                android:text="@string/or" />

            <com.gsoft.ima.view.components.Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:onClick="@{ (view) -> viewModel.signupListener() }"
                app:customFont="@string/regular"
                app:variant="soft_primary"
                android:layout_marginTop="@dimen/mt_edit_text"
                android:text="@string/signup"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>