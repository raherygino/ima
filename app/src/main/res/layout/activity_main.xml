<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_info_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_500_trans"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_500"
            android:text="@string/message_offline_mode"
            android:fontFamily="@font/sf_pro_regular"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_main"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:contentDescription="@string/sent"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:tint="@color/white"
            app:srcCompat="@drawable/ic_send"
            android:layout_marginBottom="15dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginBottom="38dp"
            android:src="@drawable/back_nav_bottom"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:tint="@color/grey_200"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@drawable/back_nav"
            android:paddingLeft="@dimen/zero"
            android:paddingRight="@dimen/zero"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_12">

            <TableLayout
                android:id="@+id/nav_table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="@dimen/size_item_menu_layout"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_item_menu"
                            android:layout_height="@dimen/size_item_menu"
                            android:src="@drawable/ic_home_outline"
                            app:tint="@color/grey_600"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/home"
                            android:textSize="@dimen/sp_12"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/grey_600"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/size_item_menu_layout"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_item_menu"
                            android:layout_height="@dimen/size_item_menu"
                            android:src="@drawable/ic_scan"
                            app:tint="@color/grey_600"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/scan"
                            android:textSize="@dimen/sp_12"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/grey_600"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="70dp"
                        android:layout_height="wrap_content">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/size_item_menu_layout"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_item_menu"
                            android:layout_height="@dimen/size_item_menu"
                            android:src="@drawable/ic_setting_outline"
                            app:tint="@color/grey_600"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings"
                            android:textSize="@dimen/sp_12"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/grey_600"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/size_item_menu_layout"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_item_menu"
                            android:layout_height="@dimen/size_item_menu"
                            android:src="@drawable/ic_user_outline"
                            app:tint="@color/grey_600"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile"
                            android:textSize="@dimen/sp_12"
                            android:fontFamily="@font/sf_pro_regular"
                            android:textColor="@color/grey_600"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>