<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IMA" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorPrimaryVariant">@color/blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_600</item>
        <item name="colorSecondaryVariant">@color/blue_100</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color.
        <item name="android:statusBarColor">@color/grey_200</item>
        <item name="android:windowLightStatusBar">true</item>
         Customize your theme here. -->
    </style>
    <style  name="AppTheme.FullScreen"  parent="Base.Theme.IMA">
        <item   name="android:windowFullscreen">true</item>
        <item   name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <!-- EditText -->
    <style name="MaterialEditText" parent="android:style/Widget.EditText">
        <item name="android:drawableTint">@color/grey_600</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPrimary" parent="android:style/Widget.Button">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/back_btn_primary</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSuccess" parent="android:style/Widget.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/back_btn_success</item>
    </style>

    <style name="ButtonPrimarySoft" parent="android:style/Widget.Button">
        <item name="android:layout_height">40dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:background">@drawable/back_btn_soft_primary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Expanded" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.CollapsingToolbar.Collapsed" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.IMA" parent="Base.Theme.IMA" />
</resources>